// QuotaApp Database Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Authentication & Profile
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  firstName     String?
  lastName      String?
  birthDate     String?
  emailVerified Boolean   @default(false)
  privacyConsent Boolean   @default(false)
  privacyConsentAt DateTime?
  privacyConsentVersion String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  milestones    Milestone[]
  expenses      Expense[]
  calendar      CalendarEntry[]
  moodData      MoodEntry[]
  salaryInfo    SalaryInfo?
  salaries      Salary[]
  extraSavings  ExtraSaving[]

  @@map("users")
}

// Milestones (Obiettivi)
model Milestone {
  id              String   @id @default(cuid())
  userId          String
  title           String
  description     String?
  targetAmount    Float?   @default(0)
  currentAmount   Float?   @default(0)
  startDate       DateTime @default(now())
  targetDate      DateTime?
  category        String?
  status          String   @default("active") // active, completed, archived
  
  // Scenari e Snapshots (JSON per flessibilit√†)
  salarySnapshot  Json?
  modelSnapshot   Json?
  plan            Json?
  
  // UI related
  celebrationsHalfShown Boolean @default(false)
  celebrationsDoneShown Boolean @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses    Expense[]
  contributions MilestoneContribution[]

  @@map("milestones")
  @@index([userId])
}

// Monthly variations of a milestone balance
model MilestoneContribution {
  id          String   @id @default(cuid())
  milestoneId String
  userId      String
  monthKey    String   // "2024-11"
  amount      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  milestone   Milestone @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  
  @@unique([milestoneId, monthKey])
  @@map("milestone_contributions")
}

// Expenses (Spese)
model Expense {
  id          String    @id @default(cuid())
  userId      String
  milestoneId String?
  amount      Float
  description String?
  date        DateTime
  category    String?
  
  // Extra fields for Budgeting
  isEssential Boolean   @default(true)
  note        String?
  emotion     String?   // happy, ok, neutral, regret, stress

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestone   Milestone? @relation(fields: [milestoneId], references: [id], onDelete: SetNull)

  @@map("expenses")
  @@index([userId])
  @@index([milestoneId])
  @@index([date])
}

// Calendar Entries
model CalendarEntry {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @unique
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("calendar_entries")
  @@index([userId])
  @@index([date])
}

// Mood Tracking
model MoodEntry {
  id              String   @id @default(cuid())
  userId          String
  date            DateTime
  score           Int      // 1-10
  emotionalInsight String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("mood_entries")
  @@index([userId])
  @@index([date])
  @@unique([userId, date])
}

// Salary Information
model SalaryInfo {
  id           String   @id @default(cuid())
  userId       String   @unique
  monthlyAmount Float
  bonusData    Json?    // For flexible bonus structure
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("salary_info")
}

// Monthly Salary Records
model Salary {
  id           String   @id @default(cuid())
  userId       String
  month        String   // "2024-11"
  amount       Float
  modelId      String   @default("50-30-20")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month])
  @@map("salaries")
}

// Extra Savings
model ExtraSaving {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("extra_savings")
  @@index([userId])
}
